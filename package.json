{
	"name": "packwiz-website",
	"version": "1.0.0",
	"description": "Website for packwiz",
	"directories": {
		"doc": "docs"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "node build.js",
		"start": "npx nodemon -e yml,md,json,js -w build.js,mkdocs.yml,docs,packwiz-spec -x 'npm run build && serve site'",
		"format": "prettier -w ."
	},
	"author": "comp500",
	"license": "ISC",
	"dependencies": {
		"js-yaml": "^4.1.0",
		"kleur": "^4.1.4"
	},
	"devDependencies": {
		"prettier": "^2.4.1"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "avoid",
		"overrides": [
			{
				"files": "*.yml",
				"options": {
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	}
}
